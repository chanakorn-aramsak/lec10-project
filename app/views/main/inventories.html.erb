<h1> List of product </h1>

<p>User Name: <%= @Userrr.name %> </p>

<table class="table">
  <tr>
    <th>Product Name</th>
    <th>Price</th>
    <th>Seller</th>
  </tr>

    <div id="items">
    <% @Inventt.each do |invent| %>
        <tr>
            <% itemm = Item.where(id: invent.item_id).first
               seller_id = itemm.user_id
               item_name = itemm.name
               item_price = itemm.price
               seller = User.where(id: seller_id).first.name
            %>
            <td> <%= item_name %> </td>
            <td> <%= item_price %> </td>
            <td> <%= seller %> </td>
        </tr>
    <% end %>
    </div>

</table>

<style>
    table, th, td {
        border: 1px solid;
    }
</style>